        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>

    </div>

    <!-- ----------------Create ---------------- -->
    <!-- <form method="GET" action="/listings/new">
    <button>Create New Listing</button>
</form> -->

    <!-- Above option to add new Listing will now be available on navbar -->


    <!-- to add css on listings in form of cards, paste bootstrap code and edit -->
    <!-- for loop makes 1 card for each listing -->

    <!-- to bring them in rows put all cards in class=row -->
    <!-- different no of cards on different size screens -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-3 mt-3">
        <% for (let listing of allListings) { %>
            <!-- to get show.ejs on clicking img,put whole card in anchor tag -->
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <!-- just add of col makes all cards in 1 row and multiple columns -->
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height:20rem">
                    <!-- height=20rem makes all iamges same height -->

                    <!-- to write anything over images, image overlays code from bootstrap -->
                    <div class="card-img-overlay">WebSite By SK</div>
                    <!-- --------------------------------------------------- -->

                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b><br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %>
                                <i class="tax-info"> &nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>

            <% } %>
    </div>

    <!-------------------------------------------------------------------------------- -->


    <!-- All below are now commented as they will be shown in form of cards now -->
