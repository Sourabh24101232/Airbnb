<% layout("layouts/boilerplate") -%>
    <!-- this line will implement boilerplate.ejs in all pages -->

    <!-- SHOW ROUTE : to READ a particular data using GET request  -->
    <!-- data is stored in variable listing -->

    <!-- Ye page ke saare content ko row aur col class ke ander karne se sab bich mein aa jata hai -->
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h1>
                <%= listing.title %>
            </h1>
        </div>
        <div class="card col-6 offset-3 listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">Owned by <i>
                        <%= listing.owner.username%>
                    </i></p>
                <p class="card-text">
                    <%= listing.description %>
                </p>
                <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %>
                </p>
                <p class="card-text">
                    <%= listing.location %>
                </p>
                <p class="card-text">
                    <%= listing.country %>
                </p>
            </div>
        </div>

    </div>

    <!-- buttons to edit and delete visiblle only to owner of listing if currUser exists and equal to owner-->
    <!-- <% if(currUser && currUser._id.equals(listing.owner._id)) { %> -->
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        <b></b>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <!-- <% } %> -->

    <!-- Form to add reviews only if logged in means currUser exists -->

    <div class="col-8 offset-3 mb-3">
        <hr>
        <% if(currUser){ %>
            <h4>Leave a Review</h4>
            <!-- go here after sumitting form -->
            <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
    

                <div class="mt-3 mb-3">
                     <label for="rating" class="form-label">Rating</label>
                    <!-- to style rating like stars -->
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>

                <div class="mt-3 mb-3">
                    <label for="comment">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please add some comments</div>
                </div>
                <div>
                    <button class="btn btn-outline-dark">Submit</button>
                </div>
            </form>
            <hr>
            <% } %>

                <!-- just add class="form-label" and class="form-control" to add bootstrap css previously used in this project -->
                <!-- class="btn-outline-dark" makes the button black on hovering due to bootstrap -->
                <!-- class="mt-3 mb-3" adds margin from top and bottom for div -->
                <!-- class="form-range" adds bootstrap css in range slider -->
                <!-- novalidate class="needs-validation" are bootsrap css when review comments are being submitted empty -->
                <!-- class="invalid-feedback" gives custom message when you submit review empty -->

                <p><b>All Reviews</b></p>

                <!-- <ul>
            <% for(review of listing.reviews) {%>
                <li>
                    <%= review.rating%> Stars , <%= review.comment %>
                </li>
                <% } %>
        </ul> -->

                <!-- to bring 2 reviews in 1 row , put all reviews in div with class=row and use col-5(to reduce size) -->
                <div class="row">
                    <% for(review of listing.reviews) {%>
                        <div class="card col-5 mb-3 ms-3">
                            <!-- from bootsrap -->
                            <div class="card-body">
                                <h5 class="card-title">@<%= review.author.username%>
                                </h5>
                                <p class="starability-result card-text" data-rating="<%= review.rating %>">
                                </p>
                                <p class="card-text">
                                    <%= review.comment %>
                                </p>
                            </div>
                            <!-- ---------------------- -->

                            <form class="mb-3" method="post"
                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-dark btn-sm">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>

    </div>